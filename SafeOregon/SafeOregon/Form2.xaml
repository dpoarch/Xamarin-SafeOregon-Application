<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeOregon.Form2">
  <StackLayout Margin="20">
    <Label Text="Who was causing harm or talking about causing harm?"  />
    <Entry x:Name="causing_Harm" />
    <Label Text="Who was or will be harmed?" />
    <Entry x:Name="will_be_Harmed" />
    <Label Text="Describe what you saw or heard."  />
    <Editor x:Name="what_you_saw" HeightRequest="100"  />
    <Button x:Name="btnNext" Text="Next" Clicked="OnNextPageButtonClicked" />
  </StackLayout>
</ContentPage>